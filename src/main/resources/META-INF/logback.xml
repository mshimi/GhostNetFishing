<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.example.ghostfishingnet.Savior" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.example.ghostfishingnet.Reporter" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.example.ghostfishingnet.app" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
</configuration>